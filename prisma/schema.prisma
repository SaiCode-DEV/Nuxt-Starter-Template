generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-musl-openssl-3.0.x","linux-musl-arm64-openssl-3.0.x","windows"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique(map: "name")
  username       String    @unique(map: "username")
  password       String
  role           String    @default("USER")
  profilePicture String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  lastLogin      DateTime?

  passkeys       Passkey[]
}

model Passkey {
  id          String   @id
  userId      Int
  publicKey   String   // Base64 encoded public key
  counter     BigInt
  backedUp    Boolean
  transports  String   // JSON array of transport strings
  createdAt   DateTime @default(now())
  lastUsedAt  DateTime?
  name        String?  // User-defined name for the passkey (e.g., "iPhone", "YubiKey")

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
